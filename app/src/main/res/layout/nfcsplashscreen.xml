<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#325A99"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/sections"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"

        >

        <ImageView
            android:id="@+id/imgnfctag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:src="@drawable/nfctransfer"
            android:layout_above="@+id/tv"
            />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="NFC TRANSFER"
            android:textAlignment="center"
            android:textColor="#E3E8F0"
            android:textSize="24dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/sublable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_centerInParent="true"

            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:hint="Fetching data from NFC card"
            android:textAlignment="center"

            android:textColor="#5F7BAA"
            android:textSize="18dp"
            android:textStyle="normal"

            />

    </RelativeLayout>


</RelativeLayout>