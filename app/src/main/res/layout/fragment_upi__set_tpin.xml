<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.infra.qrys_wallet.Fragments_UPI.UPI_SetTpin">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text=""
        android:padding="10dp"
        android:id="@+id/accountID"
        android:textColor="@color/ColorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Your Mapped Account"
        android:layout_below="@+id/accountID"
        android:paddingLeft="10dp"
        android:id="@+id/textView15" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Debit Card"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/debitcardedittext" />
<EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="Expiry date"
    android:inputType="date"
    android:layout_marginTop="20dp"
    android:id="@+id/expirydate"
    android:layout_below="@+id/debitcardedittext"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:id="@+id/cvv"

        android:layout_below="@+id/expirydate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/white"
        android:background="@color/ColorPrimary"
        android:id="@+id/cancelID"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/white"
        android:background="@color/ColorPrimary"
        android:id="@+id/nextID"
        android:layout_alignTop="@+id/cancelID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
