<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal"
              android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imgSendContact"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"

            android:src="@drawable/mwalletcontact"/>

        <TextView
            android:id="@+id/tvconfirm"
            style="@style/DialogWindowTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:padding="5px"
            android:text="Contacts"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imgSendNFC"
            android:layout_width="80sp"
            android:layout_height="80sp"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/mwalletnfc"/>

        <TextView
            android:id="@+id/tvnfc"
            style="@style/DialogWindowTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="NFC"

            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imgSendScanQR"
            android:layout_width="80sp"
            android:layout_height="80sp"

            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/qr"/>

        <TextView
            android:id="@+id/tvscanqr"
            style="@style/DialogWindowTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="Scan QR"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>




