<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"

    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/sections"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"

        >

        <ImageView
            android:id="@+id/imgnfctag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"

            android:layout_above="@+id/tvstatus"
            />

        <TextView
            android:id="@+id/tvstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#D01E4D"
            android:textSize="24dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvtxnid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvstatus"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#9D9D9D"
            android:textSize="14dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvtxndetailsmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtxnid"
            android:layout_centerInParent="true"

            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Amount of â‚¹ "
            android:textAlignment="center"

            android:textColor="#5F7BAA"
            android:textSize="18dp"
            android:textStyle="normal"

            />

    </RelativeLayout>
    <Button
        android:id="@+id/btnresend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#005A99"
        android:text="Resend"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

</RelativeLayout>