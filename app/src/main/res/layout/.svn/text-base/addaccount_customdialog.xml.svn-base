<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:layout_marginBottom="100dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="100dp"
    android:background="#ffffff"
    android:padding="20px"
    >







    <TextView
        android:id="@+id/tvconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:padding="5px"
        android:text="Add Account "
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstnameviecw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/AddAccountMMID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"



            android:hint="Enter MMID"
            android:inputType="textCapWords"
            android:textColor="#9c9c9c"
            android:textSize="18dp"

            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstnameview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_marginTop="120dp">

        <EditText
            android:id="@+id/AddAccountAccountNo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"


            android:hint="Account Number"
            android:inputType="textCapWords"
            android:textColor="#9c9c9c"
            android:textSize="18dp"

            android:layout_alignTop="@+id/firstnameview"
            android:layout_alignLeft="@+id/firstnameview"
            android:layout_alignStart="@+id/firstnameview"
            android:layout_alignRight="@+id/firstnameview"
            android:layout_alignEnd="@+id/firstnameview" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="22dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#325A99"
        android:layout_below="@+id/firstnameviecw"
        android:layout_alignLeft="@+id/firstnameview"
        android:layout_alignStart="@+id/firstnameview" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstnamevgiew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_marginTop="180dp">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="IFSC"
            android:inputType="textCapWords"
            android:textColor="#9c9c9c"
            android:textSize="18dp"
            android:id="@+id/AddAccountIFSC" />

        </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How will you recognize your account ?"
        android:layout_below="@+id/firstnamevgiew"
        android:padding="10dp"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstncameview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_marginTop="270dp">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Name of your Account"
            android:inputType="textCapWords"
            android:textColor="#9c9c9c"
            android:textSize="18dp"
            android:id="@+id/AddAccountNameofAccount" />
        </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Confirm"
        android:background="@color/zxing_transparent"
        android:textColor="#325A99"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/firstncameview"
        android:layout_alignEnd="@+id/firstncameview"
        android:id="@+id/otpok" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Cancel"
        android:background="@color/zxing_transparent"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/otpok"
        android:layout_toStartOf="@+id/otpok"
        android:id="@+id/btncancel" />
</RelativeLayout>