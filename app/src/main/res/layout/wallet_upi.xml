<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#f7f7f7"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_gravity="center"
        android:layout_width="@dimen/card_view_width"
        android:layout_height="@dimen/card_view_height"
        android:layout_marginTop="100dp"
        card_view:cardCornerRadius="@dimen/cardCornerRadius"
        card_view:contentPadding="@dimen/cardcontentPadding"
        card_view:cardElevation="@dimen/cardElevation"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_view_height"
                android:text="Send      Money"
                android:id="@+id/buttonSendMoney"
                android:layout_marginTop="@dimen/text_view_margin_top"
                android:textSize="22dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="@dimen/card_view_width"
        android:layout_height="@dimen/card_view_height"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        card_view:cardCornerRadius="@dimen/cardCornerRadius"
        card_view:contentPadding="@dimen/cardcontentPadding"
        card_view:cardElevation="@dimen/cardElevation"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_view_height"
                android:text="Receive Money"
                android:id="@+id/buttonReqMoney"
                android:layout_marginTop="@dimen/text_view_margin_top"
                android:textSize="22dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_gravity="center"
        android:layout_width="@dimen/card_view_width"
        android:layout_height="@dimen/card_view_height"
        android:layout_marginTop="300dp"
        card_view:cardCornerRadius="@dimen/cardCornerRadius"
        card_view:contentPadding="@dimen/cardcontentPadding"
        card_view:cardElevation="@dimen/cardElevation"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_view_height"
                android:text="Payment Address"
                android:id="@+id/buttonPaymentAddress"
                android:layout_marginTop="@dimen/text_view_margin_top"
                android:textSize="22dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view4"
        android:layout_gravity="center"
        android:layout_width="@dimen/card_view_width"
        android:layout_height="@dimen/card_view_height"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="200dp"
        card_view:cardCornerRadius="@dimen/cardCornerRadius"
        card_view:contentPadding="@dimen/cardcontentPadding"
        card_view:cardElevation="@dimen/cardElevation"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_view_height"
                android:text="Cheque Services"
                android:id="@+id/buttonCheckServices"
                android:layout_marginTop="@dimen/text_view_margin_top"
                android:textSize="22dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unified Payment Address"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />




</RelativeLayout>