<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="130dp"
    android:layout_gravity="center"
    android:layout_marginBottom="200dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="200dp"
    android:background="#ffffff"
    android:padding="20px"
    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Abhyudaya Bank"
    android:textSize="16dp"

    android:textColor="#000000"
    android:layout_marginTop="16dp"
    android:id="@+id/BalanceEnquiryBankName"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5,55,000"
    android:textSize="22dp"
    android:padding="10dp"
    android:layout_below="@+id/BalanceEnquiryBankName"
    android:layout_centerHorizontal="true"
    android:id="@+id/BalanceEnquiryAmount" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Available Balance "
    android:layout_below="@+id/BalanceEnquiryAmount"
    android:layout_alignRight="@+id/BalanceEnquiryBankName"
    android:layout_alignEnd="@+id/BalanceEnquiryBankName" />



</RelativeLayout>